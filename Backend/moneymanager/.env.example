# ============================================
# Money Manager - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8081

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DATABASE_URL=jdbc:postgresql://localhost:5432/moneymanager
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DB_POOL_SIZE=10
DB_MIN_IDLE=5

# ============================================
# JPA Configuration
# ============================================
# Options: none, validate, update, create, create-drop
# Use 'validate' in production, 'update' in development
JPA_DDL_AUTO=update

# ============================================
# JWT Configuration
# ============================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_min_32_characters
JWT_EXPIRATION_HOURS=10

# ============================================
# Email Configuration (SMTP)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@yourapp.com

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Application URLs
# ============================================
FRONTEND_URL=http://localhost:5173
ACTIVATION_BASE_URL=http://localhost:8081

# ============================================
# Logging Configuration
# ============================================
# Options: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO

